<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>  <!--这个是决定了状态栏颜色-->
        <item name="colorAccent">@color/blue</item>
        <!--这个是取消5.0以上按钮有阴影的问题-->
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>


<!--加上下面的2句，是模仿微信预览和选择时不要报错-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>



